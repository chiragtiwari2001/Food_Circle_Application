<h1>All Restaurants</h1>
<div class="row">
  <% @outlets.each do |outlet| %>
    <div class="col-md-4">
      <div class="card-group">
        <div class="card mb-3">
          <div class="card-header">
            <%= outlet.restaurant_name %>
          </div>
          <div class="card-body">
            <%= link_to "Show", restaurant_path(outlet), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>