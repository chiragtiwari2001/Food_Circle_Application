<div class="row">
  <div class="col-md-4 mx-auto">
    <%= form_with model: outlet do |f|%>
      <div>
        <%= f.label :restaurant_name %><br>
        <%= f.text_field :restaurant_name, class: "form-control mb-3" %>
      </div>
      
      <div>
        <%= f.label :restaurant_email %><br>
        <%= f.email_field :restaurant_email, class: "form-control mb-3" %>
      </div>
      
      <div>
        <%= f.label :restaurant_contact %><br>
        <%= f.telephone_field :restaurant_contact, class: "form-control mb-3" %>
      </div>
      
      <div>
        <%= f.label :restaurant_details %><br>
        <%= f.text_area :restaurant_details, class: "form-control mb-3" %>
      </div>
      
      <div>
        <%= f.label :restaurant_address %><br>
        <%= f.text_area :restaurant_address, class: "form-control mb-3 " %>
      </div>

      <div>
        <%= f.label :status %><br>
        <%= f.select :status, ['Open', 'Closed'], selected: 'Open' %>
      </div>

      <div>
        <%= f.label :category_ids, "Select Categories" %>
        <% Category.all.each do |category| %>
            <%= check_box_tag "restaurant[category_ids][]", category.id %>
            <%= label_tag "restaurant_category_ids_#{category.id}", 
            category.category_name %>
        <% end %>
      </div>

      <%= f.submit "save", class: "btn btn-primary mt-3" %>
    <% end %>
  </div>
</div>