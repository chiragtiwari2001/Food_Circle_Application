<h1>Add Food</h1>
<div class="row">
  <div class="col">
    <%= form_with model: [@category, @category.foods.build] do |f| %>
      <%= render "shared/error_messages", object: @food %>
      
      <%= f.label :food_name %>
      <%= f.text_field :food_name, class:"form-control mb-3" %>

      <%= f.label :price %>
      <%= f.number_field :price, class:"form-control mb-3" %>

      <%= f.submit class:"btn btn-primary"%>
    <% end %>
  </div>
</div>