<h1>Your Order List</h1>
<div class="row">
  <div class="col">
    <div class="mb-3">
      <p>
        CUSTOMER: <%= @order.user.username.upcase %><br />
        RESTAURANT: <%= @order.restaurant.restaurant_name %>, 
        <%= @order.restaurant.restaurant_address %>
      </p>
    </div>
    <table>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.food.food_name %></td>
          <td><%= order_item.quantity %></td>
          <td><%= order_item.food.price %></td>
        </tr>
      <% end %>
      <tr>
        <th colspan="3">Total: <%= @order.total_amount %> </th>
      </tr>
    </table>
  </div>
</div>