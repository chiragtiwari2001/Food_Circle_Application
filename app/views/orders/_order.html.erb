<div class="row">
  <div class="col">
    <% if order.restaurant.id == params[:restaurant_id].to_i %>
      <p style="text-align: left">
        Buyer Name: <%= order.user.username %><br>
        Restaurant Name: <%= order.restaurant.restaurant_name %>
      </p>
      <p> Ordered Items </p>
        <table>
          <% order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.food.food_name %></td>
              <td><%= order_item.food.price %></td>
              <td><%= order_item.quantity %></td>
            </tr>
          <% end %>
          <tr>
            <th colspan="3"><%= order.total_amount %></th>
          </tr>
        </table>
    <hr />
    <% end %>
  </div>
</div>