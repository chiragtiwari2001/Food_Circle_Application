<h1>All Users</h1>
<div class="row">
    <table>
      <tr>
        <th>User Avatar</th>
        <th>Username</th>
        <th>User Email</th>
        <th>Admin User</th>
      </tr>
      <% @users.each do |u|%>
      <tr>
        <td><%= gravatar_for(u) %></td>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td><%= u.roles.pluck(:name) %></td>
      </tr>
      <% end %>
    </table>
</div>