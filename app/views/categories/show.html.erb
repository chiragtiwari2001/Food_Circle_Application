<div class="container row">
  <h1><%= @category.category_name %></h1>
  <%= button_to "Add Food", new_category_food_path(@category), class: "btn btn-primary", method: :get %>
  <div class="col mx-auto">
    <center>
      <%= image_tag(@category.category_image, size: "200x200", 
      alt:"Category Image") %>
    </center>
    <% @category.foods.each do |food| %>
      <div>
        <%= food.food_name %><br />
        <hr />
      </div>
    <% end %>
  </div>
</div>